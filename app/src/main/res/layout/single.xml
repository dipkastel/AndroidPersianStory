    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp"
                android:background="@drawable/bg_image_player">

                <RelativeLayout
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_280sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/bg_image_player_iner">

                    <ImageView
                        android:id="@+id/storyImage"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_250sdp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/logo"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">
                    <TextView
                    android:id="@+id/endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="00:00"
                    android:textColor="#000"
                        android:layout_marginBottom="@dimen/_5sdp"
                    android:textSize="16.0sp" />

                    <SeekBar
                    android:id="@+id/seekbar"
                        android:layout_below="@+id/endtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/blue_scrubber_progress"
                        android:thumb="@drawable/blue_scrubber_control"  />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#eaeade"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:weightSum="3">
                    <ImageView
                        android:id="@+id/btn_Like"
                        android:layout_width="0.0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_like_off_list"/>
                    <ImageView
                        android:id="@+id/btn_play"
                        android:layout_width="0.0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_play_list"/>
                    <ImageView
                        android:id="@+id/btn_save"
                        android:layout_width="0.0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_save_player"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
