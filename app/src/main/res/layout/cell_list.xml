<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/itembg"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:orientation="vertical">

            <com.bloom.persianstory.view.IranTextview
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:textColor="#0e3e48"
                android:text="@string/app_name"
                android:textSize="20.0sp" />

            <com.bloom.persianstory.view.IranTextview
                android:id="@+id/SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/name"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="#a9a588" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:gravity="right">

            <com.bloom.persianstory.view.CircularNetworkImageView
                android:id="@+id/storyImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="10.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/logo2" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Like"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
           android:src="@drawable/btn_like_off_list"
            android:layout_marginRight="@dimen/_5sdp"
            />
        <ImageView
            android:id="@+id/play"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
           android:src="@drawable/btn_play_list"
            />
    </LinearLayout>
</RelativeLayout>